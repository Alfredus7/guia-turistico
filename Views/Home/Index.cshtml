@{
    ViewData["Title"] = "Home Page";
}

<!-- Encabezado -->
<header>
    <div class="container text-center">
        <h1>Descubre los mejores destinos turísticos</h1>
        <p>Explora, aprende y vive experiencias únicas</p>
    </div>
</header>

<!-- Sección de Destinos -->
<div class="container my-5">
    <h2 class="text-center mb-4">Destinos Destacados</h2>
    <div class="row g-4">
        <!-- Card 1 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <img src="/images/destino1.jpg" class="card-img-top" alt="Destino 1">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Lago Titicaca</h5>
                    <p class="card-text">Uno de los lagos navegables más altos del mundo, lleno de cultura y paisajes únicos.</p>
                    <a href="#" class="btn btn-primary mt-auto">Ver más</a>
                </div>
            </div>
        </div>
        <!-- Card 2 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <img src="/images/destino2.jpg" class="card-img-top" alt="Destino 2">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Salar de Uyuni</h5>
                    <p class="card-text">El desierto de sal más grande del mundo, famoso por su efecto espejo y atardeceres.</p>
                    <a href="#" class="btn btn-primary mt-auto">Ver más</a>
                </div>
            </div>
        </div>
        <!-- Card 3 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <img src="/images/destino3.jpg" class="card-img-top" alt="Destino 3">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">La Paz</h5>
                    <p class="card-text">Una ciudad vibrante en medio de montañas, con teleféricos y cultura ancestral.</p>
                    <a href="#" class="btn btn-primary mt-auto">Ver más</a>
                </div>
            </div>
        </div>
    </div>
</div>
